<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일로 초기화된 비밀번호를 보내드립니다." />

    <EditText
        android:id="@+id/editFindpassEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress" android:hint="이메일">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호로 초기화된 비밀번호를 보내드립니다." />

    <EditText
        android:id="@+id/editFindpassTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone" android:hint="전화번호"/>

</LinearLayout>