<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_indicator_green"
        android:gravity="center_vertical|center_horizontal"
        android:text="My BizCat"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:background="@drawable/mybizcat_top_menu_basic_btn"
        android:weightSum="10" >

        <TextView
            android:id="@+id/MYBIZbtnReqPost"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/s_mybiz_post_req" />

        <TextView
            android:id="@+id/MYBIZbtnReqAsk"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="@drawable/s_mybiz_post_pro" />

        <TextView
            android:id="@+id/MYBIZbtnProvPost"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="@drawable/s_mybiz_ask_req" />

        <TextView
            android:id="@+id/MYBIZbtnProvAsk"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="@drawable/s_mybiz_ask_pro" />

    </LinearLayout>

    <ListView
        android:id="@+id/MYBIZContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:fadingEdge="none" >

    </ListView>

</RelativeLayout>