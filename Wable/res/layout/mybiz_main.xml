<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_indicator_green"
        android:gravity="center_vertical|center_horizontal"
        android:text="My BizCat"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:background="@drawable/mybizcat_top_menu_basic_btn"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/MYBIZbtnReqPost"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/s_mybiz_post_req" />

            <TextView
                android:id="@+id/MYBIZbtnReqPostnoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_number_red"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/MYBIZbtnReqAsk"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@drawable/s_mybiz_post_pro" />

            <TextView
                android:id="@+id/MYBIZbtnReqAsknoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/message_number_red"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFF" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/MYBIZbtnProvPost"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@drawable/s_mybiz_ask_req" />

            <TextView
                android:id="@+id/MYBIZbtnProvPostnoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/message_number_red"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFF" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/MYBIZbtnProvAsk"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@drawable/s_mybiz_ask_pro" />

            <TextView
                android:id="@+id/MYBIZbtnProvAsknoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/message_number_red"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFF" />

        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/MYBIZcontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1" >
    </ListView>

    <RelativeLayout
        android:id="@+id/MYBIZloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8888" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>