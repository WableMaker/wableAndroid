<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg01_patten"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg" />

    <Button
        android:id="@+id/LOGINbtnFb"
        android:layout_width="268dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/selector_login_facebook_btn"
        android:text="페이스북으로 로그인 하기" />

    <EditText
        android:id="@+id/LOGINeditId"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_below="@+id/LOGINbtnFb"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="44dp"
        android:background="#00000000"
        android:ems="10"
        android:hint="아이디" android:focusable="true" android:focusableInTouchMode="true" android:clickable="true" android:inputType="textEmailAddress" android:maxLines="1" android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/LOGINeditPass"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/LOGINeditId"
        android:layout_below="@+id/LOGINeditId"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword" android:focusable="true" android:imeOptions="actionDone" android:clickable="true" android:maxLines="1">

        
    </EditText>

    <Button
        android:id="@+id/LOGINbtnFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LOGINeditPass"
        android:layout_alignRight="@+id/LOGINbtnFb"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/selector_login_password_btn" />

    <Button
        android:id="@+id/LOGINbtnLogin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/LOGINbtnFb"
        android:layout_below="@+id/LOGINbtnFind"
        android:layout_marginTop="32dp"
        android:background="@drawable/selector_login_signin_btn"
        android:text="로그인" />

    <Button
        android:id="@+id/LOGINbtnRegister"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LOGINbtnLogin"
        android:layout_alignBottom="@+id/LOGINbtnLogin"
        android:layout_alignLeft="@+id/LOGINbtnFb"
        android:background="@drawable/selector_login_signup_btn"
        android:text="회원가입" />

    <EditText
        android:id="@+id/LOGINeditUp"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/LOGINbtnLogin"
        android:layout_toLeftOf="@+id/LOGINbtnLogin"
        android:background="#00000000"
        android:inputType="textEmailAddress"
        android:ems="10" >   

    </EditText>

</RelativeLayout>