<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/LOGINtvSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/biz_splash"
        android:visibility="gone" />

    <com.thx.bizcat.util.InterceptHWkeyLayout
        android:id="@+id/LOGINLayout"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230sp" >

        <Button
            android:id="@+id/LOGINbtnFb"
            android:layout_width="268dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_facebook_login_basic_btn" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LOGINbtnRegister"
            android:layout_alignLeft="@+id/LOGINbtnFb"
            android:layout_alignRight="@+id/LOGINbtnFb"
            android:layout_alignTop="@+id/LOGINeditId"
            android:background="@drawable/login_input_identity" />

        <EditText
            android:id="@+id/LOGINeditId"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_below="@+id/LOGINbtnFb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="#00000000"
            android:clickable="true"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="아이디"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/LOGINeditPass"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/LOGINeditId"
            android:layout_below="@+id/LOGINeditId"
            android:layout_marginTop="11dp"
            android:background="#00000000"
            android:clickable="true"
            android:ems="10"
            android:focusable="true"
            android:hint="비밀번호"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1" />

        <Button
            android:id="@+id/LOGINbtnRegister"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/LOGINbtnFb"
            android:layout_below="@+id/LOGINeditPass"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_login_basic_btn" />

        <Button
            android:id="@+id/LOGINbtnLogin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/LOGINbtnRegister"
            android:layout_alignBottom="@+id/LOGINbtnRegister"
            android:layout_toRightOf="@+id/LOGINbtnRegister"
            android:background="@drawable/login_member_basic_btn" />

        <Button
            android:id="@+id/LOGINbtnFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignTop="@+id/LOGINeditPass"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_input_identity_lostpw_basic_btn" />

    </com.thx.bizcat.util.InterceptHWkeyLayout>

</RelativeLayout>