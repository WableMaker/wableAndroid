<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="요청사항" />

        <Button
            android:id="@+id/POSTbtnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="취소" />

        <Button
            android:id="@+id/POSTbtnRequestList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="요청목록" />
    </RelativeLayout>

    <Button
        android:id="@+id/POSTbtnSubmitTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RelativeLayout2"
        android:text="나의 요청사항 1" android:background="@drawable/regist_title"/>

    <TextView
        android:id="@+id/textPostSubmitAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="서울시 강남구 근처" />

    <Button
        android:id="@+id/POSTbtnSubmitOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/green_wable"/>

    <Button
        android:id="@+id/POSTbtnSubmitDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/POSTbtnSubmitTitle"
        android:text="상세 설명 1" />

    <Button
        android:id="@+id/POSTbtnService"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/POSTbtnSubmitDetail"
        android:background="@drawable/regist_price"
        android:text="서비스 비용" />

    <Button
        android:id="@+id/POSTbtnTime"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/POSTbtnSubmitDetail"
        android:text="남은 시간" android:background="@drawable/regist_time"/>

    <com.google.android.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/POSTbtnService"
        android:apiKey="0oqzs7eIvbFX8Faveem2CANcvsCaS5O1nULYH3A"
        android:clickable="true" >
    </com.google.android.maps.MapView>

    <Button
        android:id="@+id/POSTbtnLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/POSTbtnSubmitOk"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/nav_locate_me_button" />

</RelativeLayout>