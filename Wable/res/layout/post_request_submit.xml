<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg01_patten"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_bar_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="요청사항" />

        <Button
            android:id="@+id/POST_RQ_SBbtnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/nav_bar_cancel"
            android:text="취소" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textPostSubmitAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="서울시 강남구 근처" />

    <Button
        android:id="@+id/POST_RQ_SBbtnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView3"
        android:background="@drawable/post_green_wable" android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/RelativeLayout2"
        android:background="@drawable/more" />

    <Button
        android:id="@+id/POST_RQ_SBbtnCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RelativeLayout2"
        android:background="@drawable/post_regist_title"
        android:text="나의 요청사항 1" />

    <TextView
        android:id="@+id/POST_RQ_SBbtnDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mapview"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/POST_RQ_SBbtnCategory"
        android:text="요청 사항에 대한 상세 정보를 입력하세요.."
        android:textColor="#000000" android:layout_margin="8dp"/>

    <Button
        android:id="@+id/POST_RQ_SBbtnPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:background="@drawable/post_regist_price"
        android:text="서비스 비용" />

    <Button
        android:id="@+id/POST_RQ_SBbtnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:background="@drawable/post_regist_time"
        android:text="남은 시간" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/POST_RQ_SBbtnSubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/POST_RQ_SBbtnPrice"
        android:layout_margin="10dp"
        android:background="@drawable/map_mask" />

    <com.google.android.maps.MapView
        android:id="@+id/mapview"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignTop="@+id/textView3"
        android:apiKey="0oqzs7eIvbFX8Faveem2CANcvsCaS5O1nULYH3A"
        android:clickable="true" android:layout_margin="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content">

    </com.google.android.maps.MapView>

    <Button
        android:id="@+id/POST_RQ_SBbtnLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mapview"
        android:layout_alignRight="@+id/POST_RQ_SBbtnDetail"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/map_locate_me_button" />

</RelativeLayout>